{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "properties": {
    "helloWorld": {
      "additionalProperties": false,
      "description": "Example Hello World configuration",
      "properties": {
        "enabled": {
          "default": true,
          "description": "Application enabled flag",
          "title": "enabled",
          "type": "boolean"
        },
        "greetings": {
          "description": "List of greeting messages",
          "items": {
            "properties": {
              "language": {
                "type": "string"
              },
              "message": {
                "type": "string"
              }
            },
            "type": "object"
          },
          "title": "greetings",
          "type": "array"
        }
      },
      "title": "helloWorld",
      "type": "object"
    }
  },
  "type": "object"
}